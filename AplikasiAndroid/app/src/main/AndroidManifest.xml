<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".viewManager.AbsensiKeluarManagerActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.AbsensiMasukManagerActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.RekapKaryawanActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.RekapCutiActivity"
            android:exported="false" />
        <activity
            android:name=".IntentActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.FaceIDManagerActivity"
            android:exported="false" />
        <activity
            android:name=".viewKaryawan.ProfilActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.ProfilManagerActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.RekapManagerActivity"
            android:exported="false" />
        <activity
            android:name=".viewManager.CutiManagerActivity"
            android:exported="false" />
        <activity
            android:name=".viewKaryawan.RekapActivity"
            android:exported="false" />
        <activity
            android:name=".viewKaryawan.CutiActivity"
            android:exported="false" />
        <activity
            android:name=".view.FaceIdActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".viewManager.SettingManagerActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="face" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".viewKaryawan.DashKaryawanActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".viewManager.DashManagerActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".view.PrivacyActivity"
            android:exported="false" />
        <activity
            android:name=".view.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".viewKaryawan.AbsensiKeluarActivity"
            android:exported="false" />
        <activity
            android:name=".viewKaryawan.AbsensiMasukActivity"
            android:exported="false" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>