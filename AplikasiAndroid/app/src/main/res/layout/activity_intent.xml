<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewManager.IntentActivity">

    <Button
        android:id="@+id/btn_data_absen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Data Rekap Absen"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_data_absen_karyawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn_data_absen"
        android:text="Data Rekap Absen Karyawan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_data_cuti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pengajuan Cuti"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn_data_absen_karyawan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

</RelativeLayout>