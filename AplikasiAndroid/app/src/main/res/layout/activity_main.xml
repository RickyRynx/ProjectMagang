<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000ff">


        <ImageView
            android:id="@+id/iv_profil"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="Selamat Datang"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil"
            android:layout_below="@id/tv_welcome"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFF00"
            />

        <TextView
            android:id="@+id/tv_jbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil"
            android:layout_below="@id/tv_nama"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffff00"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_day"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/iv_profil"
            android:layout_marginTop="80dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toRightOf="@id/tvHari"
                android:layout_marginLeft="10dp"
                android:text="Tanggal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Hari"/>

            <TextView
                android:id="@+id/tvJam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHari"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Jam"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_absen1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/cv_day"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/tv_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan Absen Masuk"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Absen Masuk"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_absen2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/cv_day"
            android:layout_marginTop="75dp"
            android:layout_toRightOf="@id/cv_absen1"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Silahkan Absen Keluar"
                android:layout_marginBottom="20dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Absen Keluar"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="15dp"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_notifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/iv_profil"
            android:layout_marginTop="350dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="1dp"
            app:cardBackgroundColor="@color/black"
            android:layout_below="@id/tv_notifikasi"/>






    </RelativeLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>