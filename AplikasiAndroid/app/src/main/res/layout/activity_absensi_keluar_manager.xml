<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewManager.AbsensiKeluarManagerActivity">


    <EditText
        android:id="@+id/etNamaManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etJbtManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNamaManager"
        android:hint="Masukkan Jabatan"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etTglManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etJbtManager"
        android:hint="Masukkan Tanggal"
        android:layout_marginTop="10dp"/>



    <Button
        android:id="@+id/btnAbsenKeluarManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTglManager"
        android:text="Absen Keluar"
        android:layout_marginTop="10dp"/>

</RelativeLayout>