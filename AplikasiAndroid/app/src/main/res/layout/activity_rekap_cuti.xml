<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".viewManager.RekapCutiActivity">

    <TextView
        android:id="@+id/tv_rekap_karyawan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Pengajuan Cuti"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/rl_cuti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_profil_cuti_karyawan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_person"/>


        <TextView
            android:id="@+id/tvNamaKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil_cuti_karyawan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvJabatanKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil_cuti_karyawan"
            android:layout_below="@id/tvNamaKaryawan"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tvKeteranganKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil_cuti_karyawan"
            android:layout_below="@id/tvJabatanKaryawan"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvMulaiKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil_cuti_karyawan"
            android:layout_below="@id/tvKeteranganKaryawan"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tvSelesaiKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profil_cuti_karyawan"
            android:layout_below="@id/tvMulaiKaryawan"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />



    </RelativeLayout>

</LinearLayout>